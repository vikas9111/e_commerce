<div class="container">
  <div class="row d-flex justify-content-center align-items-center">
    <div class="col-lg-12 col-xl-11">
      <div class="row">
        <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
          <%= image_tag 'category_image.png',class: "card-img-top", alt: "..."%>
        </div>
        <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
          <%= form_with(model: product) do |form| %>
            <% if product.errors.any? %>
              <div style="color: red">
                <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

                <ul>
                  <% product.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group mb-2">
              <%= form.label :title %>
              <%= form.text_field :title, class: "form-control" %>
            </div>

            <div class="form-group mb-2">
              <%= form.label :warranty_detail %>
              <%= form.text_field :warranty_detail, class: "form-control" %>
            </div>

            <div class="form-group mb-2">
              <%= form.label :price %>
              <%= form.number_field :price, class: "form-control" %>
            </div>

            <div class="form-group mb-2">
              <%= form.label :category_id %>
              <%= form.collection_select(:category_id, Category.all, :id, :title, { prompt: "Select a category" }, { class: "form-control" }) %>
            </div>

            <div class="form-group mb-2">
              <%= form.label :product_images %>
              <%= form.file_field :product_images, multiple: true , class: "form-control" %>
            </div>

            <div class="form-group mb-2">
              <%= form.label :color %>
              <%= text_field_tag 'product[description][color]', @product.description['color'], class: "form-control" %>
            </div>

            <div class="form-group mb-2">
              <%= form.label :type %>
              <%= text_field_tag 'product[description][type]', @product.description['type'], class: "form-control" %>
            </div>

            <div class="form-group mb-2">
              <%= form.label :size %>
              <%= text_field_tag 'product[description][size]', @product.description['size'], class: "form-control" %>
            </div>

            <div class="form-group pt-3 text-end">
              <%= form.submit 'Save', class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>