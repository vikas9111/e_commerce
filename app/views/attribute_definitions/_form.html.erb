<div class="container">
  <div class="row d-flex justify-content-center align-items-center">
    <div class="col-lg-12 col-xl-11">
      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
          <%= form_with(model: attribute_definition) do |form| %>
            <% if attribute_definition.errors.any? %>
              <div style="color: red">
                <h2><%= pluralize(attribute_definition.errors.count, "error") %> prohibited this attribute_definition from being saved:</h2>

                <ul>
                  <% attribute_definition.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group mb-5 row">
              <%= form.label :name%>
              <%= form.text_field :name, class: "form-control" %>
            </div>

            <div class="form-group pt-3 text-end">
              <%= form.submit 'Save', class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
        <div class="col-md-3"></div>
      </div>
    </div>
  </div>
</div>
