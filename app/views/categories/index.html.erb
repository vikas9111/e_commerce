<div class="container">
  <h3>Categories</h3>
  <%= link_to "New category", new_category_path, class: 'btn btn-success mb-3 mt-3' %>
  <div class="row d-flex justify-content-center align-items-center">
    <div id="categories">
      <table class="table table-striped">
        <th>Title</th>
        <th>Description</th>
        <th></th>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.title %></td>
            <td><%= category.description%></td>
            <td>
              <%= link_to "Edit", edit_category_path(category) %>
              <%= link_to "Delete", category, data: { "turbo-method": :delete } %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
